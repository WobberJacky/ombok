    T ""

# game/gakuen_blood1.rpy:1086
translate english gakuen_blood1_3_1d89f351_3:

    # T "「…………」"
    T ""

# game/gakuen_blood1.rpy:1092
translate english gakuen_blood1_3_b36deed2:

    # T "（……美味しい）"
    T ""

# game/gakuen_blood1.rpy:1098
translate english gakuen_blood1_3_f26a0f9a:

