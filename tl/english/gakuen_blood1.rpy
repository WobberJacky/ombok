    # T "「……私のこと、からかっているのね」"
    T ""

# game/gakuen_blood1.rpy:1315
translate english gakuen_blood1_3_cb5b71d5:

    # voice blo_g0120
    # Blood "「ふふ。\n お嬢さんをからかうなんてこと、私がするわけないだろう？」"
    voice blo_g0120
    Blood ""

# game/gakuen_blood1.rpy:1323
translate english gakuen_blood1_3_ab35072e:

