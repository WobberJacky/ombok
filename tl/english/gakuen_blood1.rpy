    T ""

# game/gakuen_blood1.rpy:924
translate english gakuen_blood1_3_22187a81:

    # T "（……誰、だっけ）"
    T ""

# game/gakuen_blood1.rpy:930
translate english gakuen_blood1_3_e96b9132:

