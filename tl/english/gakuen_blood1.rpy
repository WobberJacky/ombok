# game/gakuen_blood1.rpy:1130
translate english gakuen_blood1_3_3043a052:

    # T "（？？？）"
    T ""

# game/gakuen_blood1.rpy:1136
translate english gakuen_blood1_3_e2349d49:

    # T "「……知っているわよ。\n ブラッド＝デュプレ、でしょう？」"
    T ""

# game/gakuen_blood1.rpy:1146
translate english gakuen_blood1_3_42fcf829:

    # voice blo_g0114
    # Blood "「ああ、よかった、知っていたのか。\n ……先ほどから君は、私のことをちっとも名前で呼ぼうとしないからな」"
    voice blo_g0114
    Blood ""

# game/gakuen_blood1.rpy:1157
translate english gakuen_blood1_3_9eb5a264:

    # voice blo_g0115
    # Blood "「忘れられてしまったかと思ったんだ。\n そうじゃなかったようで何よりだ」"
    voice blo_g0115
    Blood ""

# game/gakuen_blood1.rpy:1165
translate english gakuen_blood1_3_5766dda6:

    # T "（……知っているのなら、呼べとでも？）"
    T ""

# game/gakuen_blood1.rpy:1171
translate english gakuen_blood1_3_67de4f66:

    # T "「……あなただって、私のことを名前で呼ばないわ。\n 忘れているんでしょう」"
    T ""

# game/gakuen_blood1.rpy:1178
translate english gakuen_blood1_3_ea09aa4b:

    # T "たくさんいる新入生のうちの一人だ。\n 私にとって、彼は一人しかいない寮長だが、彼にとっての私はその他大勢にすぎない。"
    T ""

# game/gakuen_blood1.rpy:1188
translate english gakuen_blood1_3_1fd7a403:

    # Blood "「……[firstname]。\n [firstname]＝[familyname]」"
    Blood ""

# game/gakuen_blood1.rpy:1195
translate english gakuen_blood1_3_ba101b60:

    # T "「……！！」"
    T ""

# game/gakuen_blood1.rpy:1201
translate english gakuen_blood1_3_37d63d10:

    # T "彼の口から名前を呼ばれて、驚いた。\n しかも、フルネームだ。"
    T ""

# game/gakuen_blood1.rpy:1208
translate english gakuen_blood1_3_6b39e390:

    # T "まさか、覚えているとは思わなかった。"
    T ""

# game/gakuen_blood1.rpy:1217
translate english gakuen_blood1_3_629265df:

