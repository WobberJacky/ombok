    voice nos_g0107
    Seito ""

# game/gakuen_nightmare2.rpy:888
translate english gakuen_nightmare2_3_43dee814:

    # T "「へえ、便利ね」"
    T ""

# game/gakuen_nightmare2.rpy:897
translate english gakuen_nightmare2_3_d06da399:

    # voice mat_g0067
