    # T "「うん。\n 安心した」"
    T ""

# game/gakuen_nightmare2.rpy:1284
translate english gakuen_nightmare2_3_c412145b:

    # voice mat_g0076
    # Seito "「次は、あなたがやってみるといいわ」"
    voice mat_g0076
    Seito ""

# game/gakuen_nightmare2.rpy:1291
