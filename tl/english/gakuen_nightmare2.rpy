    # T "（何も見えないわ）"
    T ""

# game/gakuen_nightmare2.rpy:1077
translate english gakuen_nightmare2_3_4a6e08fb:

    # T "真っ暗だ。"
    T ""

# game/gakuen_nightmare2.rpy:1083
translate english gakuen_nightmare2_3_95f2a6b7:

    # T "「ねえ……。\n こう暗いと何も見えないんだけど、どうしたら……」"
    T ""

# game/gakuen_nightmare2.rpy:1090
